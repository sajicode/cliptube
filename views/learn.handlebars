<section id="learn-section">
  <div class="dark-overlay">
    <div class="main-inner container">
      <div class="row">
        <div class="col-md-6 mx-auto">

          <!--search modal-->
          <div class="modal" id="register-modal">
            <div class="card bg-danger text-center card-form modal-body">
              <div class="card-body">
                <h3>Paste Clipword Below</h3>
                <form>
                  <div class="form-group">
                    <div class="form-group">
                      <input type="text" class="form-control form-control-lg" placeholder="keyword">
                    </div>
                    <input type="submit" value="Search Clipword" class="btn btn-outline-class btn-block" id="modal-login">
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!--video modal-->
          <div class="modal" id="login-modal">
            <div class="card bg-danger text-center card-form modal-body">
              <div class="card-body">
                <h3>Paste Clipword Below</h3>
                <iframe src="" frameborder="0" height="350" width="100%" allowfullscreen></iframe>
              </div>
              <button class="btn btn-outline" id="modal-register">Close</button>
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
</section>

<script>
  var switch2login = document.getElementById('modal-login');
  var switch2reg = document.getElementById('modal-register');
  var loginModal = document.getElementById('login-modal');
  var regModal = document.getElementById('register-modal');

  switch2login.addEventListener('click', (e) => {
    e.preventDefault();
    regModal.style.display = 'none';
    loginModal.style.display = 'block'
  })

  switch2reg.addEventListener('click', (e) => {
    e.preventDefault();
    loginModal.style.display = 'none';
    regModal.style.display = 'block';
  })
</script>
