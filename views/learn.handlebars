<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU"
    crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
    crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.css" />
  <link rel="stylesheet" type="text/css" href="../public/css/style.css">
  <title>Cliptube | Student</title>
</head>

<body>

  <!--Navbar-->
  <nav class="navbar navbar-expand-md navbar-dark bg-light">
    <div class="container">
      <a href="index.html" class="navbar-brand text-success"><strong>ClipTube</strong></a>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active text-success">
            <a href="index.html" class="nav-link">Home</a>
          </li>
          <li class="nav-item">
            <a href="teach.html" class="nav-link text-success">Teach</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link text-success">Services</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link text-success">Blog</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link text-success">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <section id="learn-section">
    <div class="dark-overlay">
      <div class="main-inner container">
        <div class="row">
          <div class="col-md-6 mx-auto">

            <!--search modal-->
            <div class="modal" id="register-modal">
              <div class="card bg-danger text-center card-form modal-body">
                <div class="card-body">
                  <h3>Paste Clipword Below</h3>
                  <form>
                    <div class="form-group">
                      <div class="form-group">
                        <input type="text" class="form-control form-control-lg" placeholder="keyword">
                      </div>
                      <input type="submit" value="Search Clipword" class="btn btn-outline-class btn-block" id="modal-login">
                    </div>
                  </form>
                </div>
              </div>
            </div>

            <!--video modal-->
            <div class="modal" id="login-modal">
              <div class="card bg-danger text-center card-form modal-body">
                <div class="card-body">
                  <h3>Paste Clipword Below</h3>
                  <iframe src="" frameborder="0" height="350" width="100%" allowfullscreen></iframe>
                </div>
                <button class="btn btn-outline" id="modal-register">Close</button>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  </section>

  <script>
    var switch2login = document.getElementById('modal-login');
    var switch2reg = document.getElementById('modal-register');
    var loginModal = document.getElementById('login-modal');
    var regModal = document.getElementById('register-modal');

    switch2login.addEventListener('click', (e) => {
      e.preventDefault();
      regModal.style.display = 'none';
      loginModal.style.display = 'block'
    })

    switch2reg.addEventListener('click', (e) => {
      e.preventDefault();
      loginModal.style.display = 'none';
      regModal.style.display = 'block';
    })
  </script>
</body>

</html>